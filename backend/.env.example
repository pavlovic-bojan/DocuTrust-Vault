# Database (required)
DATABASE_URL="postgresql://username:password@localhost:5432/doctrust_vault"

# Auth (required) – minimum 32 characters for JWT
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

SESSION_SECRET="session-secret-change-in-production"

# Document storage – local folder for uploads
UPLOAD_DIR="uploads"

# Server
PORT=4000
NODE_ENV=development

# Bug report – admin email to receive bug reports (set to enable Report Bug feature)
BUG_REPORT_EMAIL="admin@example.com"

# SMTP for sending emails (bug reports, etc.)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
